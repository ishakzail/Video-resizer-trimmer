{
   "ts-node": { "esm": true, "experimentalSpecifierResolution": "node" },
    "compilerOptions": {
      "lib": ["es2023"],
      "module": "ESNext",
      "target": "es2022",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node",

    },
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}